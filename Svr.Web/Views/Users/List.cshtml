	{
		<div>
			<hr />
			<h4>@item</h4>
			<dl class="dl-horizontal">
				<dt>
					@Html.DisplayNameFor(modelItem => item.Id)
				</dt>
				<dd>
					@Html.DisplayFor(modelItem => item.Id)
				</dd>
				<dt>
					@Html.DisplayNameFor(modelItem => item.LastName)
				</dt>
				<dd>
					@Html.DisplayFor(modelItem => item.LastName)
				</dd>
