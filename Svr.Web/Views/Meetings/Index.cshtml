@model Svr.Web.Models.MeetingsViewModels.IndexViewModel

@{
    ViewData["Title"] = $"Список заседаний для {Model.Claim.Name}";
}

<h4>@ViewData["Title"]</h4>
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)

<p>
    <a asp-action="Details" asp-controller="Claims" asp-route-id="@Model.Claim.Id" class="btn btn-sm btn-primary">Назад к @Model.Claim.Name</a>
    @if (!User.IsInRole(Role.UserOPFR))
    {
        <a asp-action="Create" asp-controller="Meetings" asp-route-owner="@Model.Claim.Id" class="btn btn-sm btn-primary">Добавить</a>
    }
</p>
@await Html.PartialAsync("List", Model)
