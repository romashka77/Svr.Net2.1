@model string

@if (!string.IsNullOrEmpty(Model))
{
    <a asp-action="Edit" asp-route-id=@Model class="btn btn-sm btn-primary">Редактировать</a>
    <a asp-action="Details" asp-route-id=@Model class="btn btn-sm btn-primary">Подробнее</a>
    <a asp-action="Delete" asp-route-id=@Model class="btn btn-sm btn-danger">Удалить</a>
}