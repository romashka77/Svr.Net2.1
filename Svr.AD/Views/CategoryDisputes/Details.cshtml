@using Svr.Core.Entities
@model Svr.AD.Models.CategoryDisputesViewModels.ItemViewModel

@{
        ViewData["Title"] = "Подробности " + Model.Name;
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@Model</h4>
    @await Html.PartialAsync(partialViewName: $"_EditBackButton")
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayTextFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedOnUtc)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedOnUtc)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UpdatedOnUtc)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UpdatedOnUtc)
        </dd>

        <dt>@Html.DisplayNameFor(model => model.GroupClaims)</dt>
        <dd>
            <ul>
                @foreach (GroupClaim groupClaim in Model.GroupClaims)
                {
                    <li>
                        <a asp-controller="GroupClaims" asp-action="Details" asp-route-id="@groupClaim.Id">@groupClaim.Code @groupClaim.Name</a>
                    </li>
                }
            </ul>
        </dd>
        <dd>
            @await Html.PartialAsync(partialViewName: $"_EditDeleteBackButton")
        </dd>
    </dl>
</div>
