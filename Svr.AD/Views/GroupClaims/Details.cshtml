@using Svr.Core.Entities
@model Svr.AD.Models.GroupClaimsViewModels.ItemViewModel

@{
    ViewData["Title"] = $"Подробности {Model.Name}";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@Model</h4>
    @await Html.PartialAsync(partialViewName: $"_EditBackButton")
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayTextFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedOnUtc)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedOnUtc)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UpdatedOnUtc)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UpdatedOnUtc)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CategoryDispute)
        </dt>
        <dd>
            <a asp-controller="CategoryDisputes" asp-action="Details" asp-route-id="@Model.CategoryDisputeId">@Model.CategoryDispute.Name</a>
            @*@Html.DisplayFor(model => model.CategoryDispute.Name)*@
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SubjectClaims)
        </dt>
        <dd>
            <ul>
                @foreach (SubjectClaim subjectClaim in Model.SubjectClaims)
                {
                    <li>
                        <a asp-controller="SubjectClaims" asp-action="Details" asp-route-id="@subjectClaim.Id">@subjectClaim.Code @subjectClaim.Name</a>
                    </li>
                }
            </ul>
        </dd>
        <dd>
            @await Html.PartialAsync(partialViewName: $"_EditDeleteBackButton")
        </dd>
    </dl>
</div>
